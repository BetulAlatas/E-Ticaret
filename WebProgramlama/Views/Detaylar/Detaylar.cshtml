@model  WebProgramlama.Models.MultipleModel
         
@{
    ViewBag.Title = "Detaylar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12" >


   @foreach(var item in Model.urunler)
   { 
    <div class="col-md-7">
        <h1>@item.UrunAdi</h1>
        <br />
        <div class="col-md-3">
            <a class="img-rounded" href="~/@item.UrunFotografi" title="@item.UrunAdi" itemprop="name" style="padding-bottom:inherit">
                <img src="~/@item.UrunFotografi" height="300" width="260" />

            </a>

        </div>

        <div class="col-md-12" style="margin-top:30px">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Ürün Kodu</th>
                            <th>Fiyatı</th>
                            <th>Eklenme Tarihi</th>
                            <th>Şehir</th>
                        </tr>
                    </thead>
                  
                        <tr>
                            <td>@item.UrunID</td>
                            <td>@item.Fiyati</td>
                            <td>@item.EklenmeTarihi</td>
                            <td>@item.Sehir</td>
                        </tr>



                </table>              
            </div>

        </div>

    </div>

   }
    <div class="col-md-5">
        @foreach(var item in Model.uyeler)
        {
            
        
        <h3>SATICI BİLGİLERİ</h3>
        <img src="~/images/user-avatar.png"  width="80" height="65" />
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Adı</th>
                        <td>@item.Adi</td>
                    </tr>
                    <tr>
                        <th>Soyadı</th>
                        <td>@item.Soyadi</td>
                    </tr>
                    <tr>
                        <th>Telefon </th>
                        <td>@item.Telefon</td>
                    </tr>
                    <tr>
                        <th>Değer Puanı</th>
                        <td>@item.DegerPuanı</td>
                    </tr>
                </thead>            
            </table>
        </div>

        }
        <h4>Satışta Olan Diğer Ürünleri</h4>

            @foreach (var item in Model.tumUrunler)
            {
                <img src="~/@item.UrunFotografi" width="100" height="100" />

            }


        
    </div>





    </div>